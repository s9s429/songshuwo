.header {
  width: 100%;
  padding: 10rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}
.header .inputCon {
  display: inline-flex;
  height: 75rpx;
  width: 400rpx;
  flex-direction: row;
  align-items: center;
  background-color: #f4f4f4;
  border-radius: 35rpx;
  overflow: hidden;
}
.header .inputImg {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}
.header .inputSty {
  border-radius: 25rpx;
  padding: 0 15rpx;
}
.header .userImage {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}
.header .gameImg {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.header .email {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.headTabFake {
  background-color: #fff;
  height: 100rpx;
  width: 100%;
}
.headTab {
  background-color: #fff;
  height: 100rpx;
}
.headTabFiex {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.scroll-view_H{
  white-space: nowrap;
  width: 750rpx;
}
.headTab .tabTxt {
  font-size: 35rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  display: inline-block;
  margin: 0 25rpx;
  padding: 0 6rpx;
  /* transition: all .2s;
  border-bottom: 5rpx solid #fff; */
}
.headTab .tabTxt:first-child {
  margin-left: 50rpx;
}
.headTab .tabTxt:last-child {
  margin-right: 50rpx;
}
.headTab .tabTxt.active {
  color: #ed7b97;
  box-sizing: border-box;
  border-bottom: 5rpx solid #ed7b97;
}
